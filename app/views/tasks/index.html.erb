<h2>My tasks</h2>

<ul>

<% @tasks.each do |task| %>

<li><input type="checkbox" disabled="disabled" <%= 'checked' if task.completed %>><%= link_to task.title, task_path(task) %> <%= link_to "(Delete task)", task_delete_path(task), method: :delete %></li>


<% end %>

</ul>

<p> <%= link_to "Add a new task", tasks_new_path %>
