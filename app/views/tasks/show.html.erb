<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" disabled="disabled" <%= 'checked' if @task.completed %>>
<%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %>

<p><%= link_to "Edit this task", task_edit_path(@task) %></p>

<p><%= link_to "Back to list", tasks_path %></p>
